{
  "extends": [
    "next/core-web-vitals",
    "plugin:storybook/recommended"
  ],
  "rules": {
    "array-bracket-newline": [
      "error",
      "never"
    ],
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "arrow-spacing": "error",
    "block-spacing": "error",
    "comma-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "curly": "error",
    "eol-last": [
      "error",
      "always"
    ],
    "eqeqeq": "error",
    "implicit-arrow-linebreak": [
      "error",
      "beside"
    ],
    "indent": [
      "error",
      2
    ],
    "key-spacing": [
      "error",
      {
        "afterColon": true
      }
    ],
    "jsx-quotes": [
      "error",
      "prefer-double"
    ],
    "no-confusing-arrow": "error",
    "no-console": "error",
    "no-undef-init": "error",
    "no-var": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "operator-linebreak": [
      "error",
      "after"
    ],
    "padded-blocks": [
      "error",
      "never"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "semi": [
      "error",
      "never"
    ],
    "react/no-unescaped-entities": 0
  }
}
