{
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": false
  },
  // show eslint icon at bottom toolbar
  "eslint.alwaysShowStatus": true,
  // tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit"
  },
  "cSpell.words": [
    "clsx",
    "Fjalla",
    "groq",
    "hctdstudio",
    "herostyles",
    "hotspot",
    "linebreak",
    "lqip",
    "parens",
    "portabletext",
    "Schnozzberry",
    "sitebanner",
    "Snozzberry",
    "tiktok"
  ]
}
